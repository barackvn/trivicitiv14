<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="stock_picking_view_form_inherit_trivicity" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="move_ids_without_package" position="after">
                    <h5>Detailed Operations</h5>                    
                    <field name="move_line_ids_without_package" attrs="{'readonly': ['|', '|', ('show_operations', '=', False), ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}" context="{'tree_view_ref': 'stock.view_stock_move_line_detailed_operation_tree', 'default_picking_id': id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_company_id': company_id}"/>
                </field>
            </field>
        </record>

        <record id="stock_picking_view_form_inherit_stock_barcode_trivicity_erp" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock_barcode.stock_picking_view_form_inherit_stock_barcode"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="_barcode_scanned" widget="picking_barcode_handler" readonly="False" />
                </field>
            </field>
        </record>

    </data>
</odoo>